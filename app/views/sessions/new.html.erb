<% provide(:title, 'Log in') %>
<h1>Log in</h1>
<%= form_for :session, url: login_path do |f| %>
    <%= f.label 'Email' %>
    <%= f.email_field :email %>
    <%= f.label 'Password' %>
    <%= f.password_field :password %>
    <%= f.label 'Remember me' do %>
        <%= f.check_box :remember_me %>
        <span>Remember me on this computer</span>
    <% end %>
    <%= f.submit 'Submit' %>
<% end %>