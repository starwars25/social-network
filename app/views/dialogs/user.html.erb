<% provide(:title, "#{@user.username}'s dialogs") %>
<div class="row">
  <div class="col-xs-12 col-sm-3 col-md-3 col-lg-3">
    <% if @user.dialogs.any? %>
        <h1>Your dialogs</h1>
        <div class="list-group">
          <% @user.dialogs.each do |dialog| %>
              <%= link_to dialog.name, dialog_path(dialog.id), class: 'list-group-item', remote: true %>
          <% end %>
        </div>
    <% else %>
        <h1>You have no dialogs</h1>
    <% end %>
    <%= link_to 'Create dialog', new_dialog_path %></div>
  <div class="col-xs-12 col-sm-9 col-md-9 col-lg-9" id="dialog_field">

  </div>
</div>